<div class="flex flex-col gap-4">
  <div class="flex justify-between items-center">
    <!-- タイトル -->
    <p class="text-2xl font-bold text-custom-dark-green"><%= task.title %></p>

    <!-- ドロップダウンメニュー（編集・ステータス変更・削除） -->
    <%= render 'tasks/dropdown', task: task %>
  </div>

  <div class="flex justify-start items-center gap-4">
    <!-- ステータスバッジ -->
    <%= turbo_frame_tag "status_badges_#{task.id}" do %>
      <%= render 'tasks/status_badge', task: task %>
    <% end %>
    
    <!-- タグ一覧 -->
    <div class="flex flex-wrap gap-2">
      <%= render partial: "tasks/tag_badge", collection: task.tags, as: :tag %>
    </div>
  </div>

  <!-- Todoリスト -->
  <div class="flex flex-col gap-2">
    <%= render partial: "todos/todo", collection: task.todos %>
  </div>
</div>
