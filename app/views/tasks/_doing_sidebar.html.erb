<!-- やることリストカード -->
<div class="card bg-base-200 shadow-sm w-full mb-1">
  <div class="card-body">
    <p class="text-neutral font-semibold">タスクの完了条件</p>
    <div class="flex flex-col gap-2">
      <%= render partial: "todos/todo", collection: task.todos %>
    </div>
  </div>
</div>
<!-- ボタン群 -->
<div class="flex justify-center">
  <%= render 'tasks/status_button', task: task %>
</div>
<div class="flex justify-center">
  <%= render 'tasks/destroy_button', task: task %>
</div>
