<% if task.todo? %>
  <%= link_to toggle_status_task_path(task), data: { turbo_method: :patch, turbo_frame: "_top" }, class: "btn btn-soft btn-success rounded-full shadow-none w-full" do %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="size-5">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
    </svg>
    タスクに取り組む
  <% end %>
<% elsif task.doing? %>
  <%= link_to toggle_status_task_path(task), data: { turbo_method: :patch, turbo_frame: "_top" }, class: "btn btn-soft btn-accent rounded-full shadow-none w-full" do %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="size-5">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" /><path d="M9 12l2 2l4 -4" />
    </svg>
    タスクを完了する
  <% end %>
<% elsif task.done? %>
  <%= link_to toggle_status_task_path(task), data: { turbo_method: :patch, turbo_frame: "_top" }, class: "btn btn-soft btn-primary rounded-full shadow-none w-full" do %>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="size-5">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
    </svg>
    再びタスクに取り組む
  <% end %>
<% end %>