<div class="flex flex-col h-full gap-10 px-20 py-10 bg-custom-white rounded-lg min-h-screen">
  <p class="text-4xl font-bold text-custom-dark-green text-center">タスク</p>
  <div class="flex justify-end gap-4">
    <!-- ステータスフィルター -->
    <%= form_with url: tasks_path, method: :get, data: { turbo_frame: "tasks_list" }, class: "flex items-center gap-2" do |form| %>
      <%= form.select :status, 
          options_for_select([
            ['すべて', ''],
            ['Todo', 'todo'],
            ['Doing', 'doing'],
            ['Done', 'done']
          ], params[:status]),
          {},
          class: "select select-bordered select-secondary font-semibold",
          onchange: "this.form.requestSubmit()" %>
    <% end %>
    
    <!-- タスク作成ボタン -->
    <%= link_to new_task_path, class: "btn btn-outline btn-secondary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
        <path d="M10.75 4.75a.75.75 0 0 0-1.5 0v4.5h-4.5a.75.75 0 0 0 0 1.5h4.5v4.5a.75.75 0 0 0 1.5 0v-4.5h4.5a.75.75 0 0 0 0-1.5h-4.5v-4.5Z" />
      </svg>
      作成
    <% end %>
  </div>
  
  <!-- タスク一覧 -->
  <% if @tasks.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @tasks.each do |task| %>
        <!-- タスクカード -->
        <%= render 'tasks/task_card', task: task %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-10">
      <p class="text-custom-dark-green/60">タスクがありません</p>
    </div>
  <% end %>
</div>