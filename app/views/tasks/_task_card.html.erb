<%= link_to task_path(task), class: "card h-48 shadow-sm" do %>
  <div class="card-body">
    <div class="card-actions">
      <!-- ステータスアイコン -->
      <%= render 'tasks/status_icons', task: task %>

      <!-- 作成日 -->
      <p class="text-custom-dark-green/80">
        作成日: <%= task.created_at.strftime("%Y年%m月%d日 %H:%M") %>
      </p>
    </div>

    <!-- タイトル -->
    <p class="card-title line-clamp-2"><%= task.title %></p>

    <!-- タグ一覧 -->
    <div class="card-actions">
      <% task.tags.each do |tag| %>
        <span class="badge badge-secondary"><%= tag.name %></span>
      <% end %>
    </div>
  </div>
<% end %>
