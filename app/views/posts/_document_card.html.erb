<!-- URL -->
<div class="text-sm text-blue-600 mb-2">
  <%= link_to document.url, 
              document.url, 
              target: "_blank", 
              rel: "noopener noreferrer",
              class: "hover:underline" %>
</div>

<!-- メインコンテンツ -->
<div class="flex items-start gap-4">
  <!-- 左側の緑色の縦線 -->
  <div class="w-1 bg-green rounded-full self-stretch"></div>

  <!-- 中央のコンテンツ -->
  <div class="flex-1 min-w-0">
    <!-- タイトル -->
    <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2 leading-tight">
      <%= link_to document.card_title, 
                  document.url, 
                  target: "_blank", 
                  rel: "noopener noreferrer",
                  class: "text-dark-green hover:text-green transition-colors duration-200" %>
    </h3>
    
    <!-- 説明文 -->
    <% if document.card_description.present? %>
      <p class="text-sm text-dark-green/70 line-clamp-3 leading-relaxed">
        <%= document.card_description %>
      </p>
    <% end %>
  </div>

  <!-- 右側のアイコン -->
  <div class="flex-shrink-0 ml-4">
    <% if document.card_image_url.present? %>
      <%= image_tag document.card_image_url,
                    alt: document.card_title,
                    class: "w-12 h-12 object-cover rounded-lg" %>
    <% else %>
      <div class="w-12 h-12 bg-red-500 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-white">
          <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
        </svg>
      </div>
    <% end %>
  </div>
</div>
