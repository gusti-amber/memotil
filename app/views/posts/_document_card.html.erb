<div class="flex flex-col gap-2">
  <!-- URL -->
  <%= link_to document.url, 
              document.url, 
              target: "_blank", 
              rel: "noopener noreferrer",
              class: "link link-info text-sm" %>
  
  <!-- メインコンテンツ -->
  <div class="flex items-center gap-4">
    <!-- 左側の緑色の縦線 -->
    <div class="w-1 bg-green rounded-full self-stretch"></div>

    <!-- 中央のコンテンツ -->
    <div class="flex-1">
      <div class="flex flex-col gap-2">
        <!-- タイトル -->
        <%= link_to document.card_title, 
                    document.url, 
                    target: "_blank", 
                    rel: "noopener noreferrer",
                    class: "text-base-content text-lg font-bold line-clamp-2 leading-tight" %>
        
        <!-- 説明文 -->
        <% if document.card_description.present? %>
          <p class="text-sm text-muted line-clamp-3 leading-relaxed">
            <%= document.card_description %>
          </p>
        <% end %>
      </div>
    </div>

    <!-- 右側のアイコン -->
    <div class="flex-shrink-0">
      <% if document.card_image_url.present? %>
        <%= image_tag document.card_image_url,
                      class: "w-12 h-12 object-cover rounded-lg" %>
      <% else %>
        <div class="w-12 h-12 bg-error rounded-lg flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-white size-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
          </svg>
        </div>
      <% end %>
    </div>
  </div>
</div>

