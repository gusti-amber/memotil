<%= turbo_frame_tag "post_#{post.id}" do %>
  <div class="flex items-end group px-6 py-2">
    
    <!-- 投稿内容 -->
    <div class="chat chat-start">
      <div class="chat-header">
        <span class="text-sm font-medium text-custom-dark-green">
          <%= post.user.name %>
        </span>
        <span class="text-xs text-custom-dark-green/70 ml-2">
          <%= post.created_at.strftime("%Y年%m月%d日 %H:%M") %>
        </span>
      </div>
      <div class="chat-bubble bg-custom-off-white text-custom-dark-green border-none overflow-x-auto">
        <% if post.postable_type == 'TextPost' %>
          <!-- ♻️ 今後、サニタイズの実装を行う -->
          <%= markdown(post.postable.body) %>
        <% elsif post.postable_type == 'DocumentPost' %>
          <%= render 'posts/document_card', document: post.postable.document %>
        <% end %>
      </div>
    </div>
    <div class="flex justify-start">
      <%= link_to task_post_path(post.task, post),
        data: { turbo_method: :delete, turbo_confirm: "この投稿を削除しますか？", test_id: "delete-post-btn" },
        class: "btn btn-ghost btn-circle btn-sm text-error border-none shadow-none hover:bg-error/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
        </svg>
      <% end %>
    </div>
  </div>
<% end %>
