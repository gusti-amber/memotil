<div class="bg-custom-white rounded-lg flex items-center justify-center py-10">
  <div class="rounded-lg px-12 py-6 relative mx-auto w-xl">
    <div class="flex flex-col items-center h-full gap-5 my-5 w-full">
      <p class="text-2xl font-bold text-custom-dark-green">アカウント設定</p>

      <div class="flex flex-col items-start gap-5 w-full border border-base-content/20 p-6 rounded-lg">
        <p class="text-xl font-bold text-neutral text-start">プロフィール</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "flex flex-col gap-5 w-full" }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="field w-full">
            <%= f.label :name, class: "text-custom-dark-green font-medium" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class: "input input-bordered w-full bg-custom-white border-custom-dark-green text-custom-dark-green focus:border-custom-dark-green focus:ring-2 focus:ring-custom-dark-green/20 focus:outline-none placeholder:text-custom-dark-green/50" %>
          </div>

          <div class="actions flex justify-center w-full">
            <%= f.submit "変更", class: "btn btn-primary w-full" %>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col items-start gap-5 w-full border border-base-content/20 p-6 rounded-lg">
        <p class="text-xl font-bold text-neutral text-start">メールアドレス</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "flex flex-col gap-5 w-full" }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <!-- 現在のメールアドレスの表示 -->
          <div class="field w-full">
            <label class="text-custom-dark-green font-medium">現在のメールアドレス</label><br />
            <div class="input input-bordered w-full bg-base-200 border-base-300 text-base-content cursor-not-allowed">
              <%= resource.email %>
            </div>
          </div>

          <!-- 新しいメールアドレスの入力フィールド -->
          <div class="field w-full">
            <%= f.label :email, "新しいメールアドレス", class: "text-custom-dark-green font-medium" %><br />
            <%= f.email_field :email, value: resource.unconfirmed_email.presence || "", autocomplete: "email", placeholder: "id@example.com", class: "input input-bordered w-full bg-custom-white border-custom-dark-green text-custom-dark-green focus:border-custom-dark-green focus:ring-2 focus:ring-custom-dark-green/20 focus:outline-none placeholder:text-custom-dark-green/50" %>
          </div>

          <div class="actions flex justify-center w-full">
            <%= f.submit "変更", class: "btn btn-primary w-full" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
