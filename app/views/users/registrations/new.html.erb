<div class="flex justify-center">
  <div class="flex flex-col gap-6 p-12 max-w-2xl w-full text-base-content">
    <p class="text-2xl font-bold text-center">新規登録</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col gap-4 w-full" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field w-full">
        <%= f.label :name, class: "text-sm font-semibold" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class: "input input-lg w-full bg-surface text-base placeholder:text-placeholder" %>
      </div>

      <div class="field w-full">
        <%= f.label :email, class: "text-sm font-semibold" %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "id@example.com", class: "input input-lg w-full bg-surface text-base placeholder:text-placeholder" %>
      </div>

      <div class="field w-full">
        <%= f.label :password, class: "text-sm font-semibold" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-muted"><%= @minimum_password_length %> 文字以上の半角英数字</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "input input-lg w-full bg-surface text-base placeholder:text-placeholder" %>
      </div>

      <div class="field w-full">
        <%= f.label :password_confirmation, class: "text-sm font-semibold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password(confirmation)", class: "input input-lg w-full bg-surface text-base placeholder:text-placeholder" %>
      </div>

      <div class="actions flex justify-center w-full mt-4">
        <%= f.submit "新規登録", class: "btn btn-lg btn-primary w-full text-base" %>
      </div>
    <% end %>

    <div class="flex justify-center">
      <%= link_to "すでにアカウントをお持ちですか？ - ログイン", new_session_path(resource_name), class: "text-sm font-semibold underline hover:text-muted" %>
    </div>
  </div>
</div>